{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar todo C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${fileDirname}\\main.c",
                "${fileDirname}\\calculoMatricula.c",
                "${fileDirname}\\funcionesSwitch.c",
                "${fileDirname}\\ingresoUsuario.c",
                "${fileDirname}\\operacionesBasicas.c",
                "${fileDirname}\\validaciones.c",
                "-o",
                "${fileDirname}\\main.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compilar todos los archivos C del proyecto"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe compilar archivo activo",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        }
    ]
}